<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/padding16"
    tools:context=".view.MainActivity">

    <androidx.appcompat.widget.AppCompatTextView
        style="@style/Typography.600.Bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin40"
        android:text="@string/eco_challenge_title" />

    <androidx.appcompat.widget.AppCompatTextView
        style="@style/Typography.400.Light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/eco_challenge_description" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_challenges"
        tools:listitem="@layout/eco_challenge_list_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/margin16"
        android:orientation="vertical"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

    <include
        android:id="@+id/loading_view"
        layout="@layout/layout_progress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</LinearLayout>