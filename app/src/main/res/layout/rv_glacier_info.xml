<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="250dp"
    android:layout_height="420dp"
    android:background="@drawable/info_cover"
    app:layout_constraintDimensionRatio="25:45">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_glacier"
        android:layout_width="180dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/margin16"
        android:layout_marginTop="@dimen/margin24"
        android:scaleType="centerCrop"
        app:layout_constraintDimensionRatio="2:3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/crop_image_menu_flip" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_period"
        style="@style/Typography.450.Bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin32"
        android:hint="1980년 5월 3일"
        android:textColor="@color/black_900"
        app:layout_constraintEnd_toEndOf="@id/iv_glacier"
        app:layout_constraintStart_toStartOf="@id/iv_glacier"
        app:layout_constraintTop_toBottomOf="@+id/iv_glacier"
        tools:ignore="HardcodedText" />
</androidx.constraintlayout.widget.ConstraintLayout>