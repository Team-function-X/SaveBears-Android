<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/length250">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_challenge"
        android:layout_width="@dimen/length150"
        android:layout_height="0dp"
        android:layout_marginHorizontal="@dimen/padding20"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_comment"
        style="@style/Typography.400.Light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="해당 첼린지에 대한 코멘트"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_challenge"
        tools:ignore="HardcodedText" />

</androidx.constraintlayout.widget.ConstraintLayout>